<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shoestar.client.brand.dao.NoticeReplyDao">
	
	<!-- 댓글 전체조회 (해당 게시물 번호) -->
	<select id="replyList" parameterType="notice" resultType="com.shoestar.client.notice.vo.NoticeVO">
		select r.re_no, r.mem_no, r.re_content, r.re_date, r.no_no 
			from notice_reply r
			join notice n
			on r.no_no = n.no_no
			where r.no_no = #{no_no}
			order by r.re_no desc
	</select>
	
