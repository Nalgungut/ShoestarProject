<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shoestar.client.notice.dao.NoticeDao">
	
	<!-- 게시판 리스트 -->
	<select id="noticeList" parameterType="com.shoestar.client.notice.vo.NoticeVO" resultType="com.shoestar.client.notice.vo.NoticeVO">
		select 
    		no_no, no_kind, no_subject, no_content, to_char(no_date, 'YYYY-MM-DD') as no_date 
    	from notice 
    	order by no_no desc
	</select>
	
	<!-- 상세페이지를 위한 게시물 조회 -->
	<select id="noticeDetail" parameterType="com.shoestar.client.notice.vo.NoticeVO" resultType="com.shoestar.client.notice.vo.NoticeVO">
		select 
    		no_no, no_kind, no_subject, no_content, to_char(no_date, 'YYYY-MM-DD') as no_date 
    	from notice 
    	order by no_no desc
	</select>
</mapper>