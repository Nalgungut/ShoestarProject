<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shoestar.client.prod.dao.ProdDao">
	
	
	<!--##################################### 최대 할인율 검색하는 쿼리문 #####################################-->
	<sql id="dcmax">
		(
		SELECT
			MAX(rd_discount) AS maximum
		FROM
			range_discount r
			LEFT OUTER JOIN
				rd_type rt
			ON
				r.rd_no = rt.rd_no
			LEFT OUTER JOIN
				rd_product rp
			ON
				r.rd_no = rp.rd_no
		WHERE
			(
				RD_EDATE >= TRUNC(sysdate) OR
				RD_EDATE IS NULL
			)
			AND	rp.pd_no = prod.pd_no
			OR rt.pct_no = prod.pct_no
		)
	</sql>
	
	
	<!--##################################### 검색해오는 prodvo 정보 #####################################-->
	<sql id="prodInfo">
		pd_no, pd_name, pd_sex, pd_age, pct_no, co_no, pd_price,
		pd_fabric, pd_country, pd_year, pd_manu, pd_import, pi_no, pd_date, pd_status, pim_main,
		<!-- 카테고리 이름 받기 -->
		(
		SELECT
			pct_name
		FROM
			prod_ctg
		WHERE
			pct_no = prod.pct_no
		) AS pct_name,
		<!-- 할인율 계산 하기 -->
		(
		NVL((
			<include refid="dcmax"/>
		), 0)
		) AS pd_discount
	</sql>
	
	
	<!--##################################### 검색 조건문 #####################################-->
	<sql id="prodReq">
		<!-- 상태값 -->
		<trim prefix="AND"><choose>
			<when test='pd_status == null or pd_status == "ok"'>
				(pd_status IS NULL OR pd_status IN ('n', 'h', 'b'))
			</when>
			<when test='pd_status == "all"'>
			</when>
			<when test='pd_status == "n"'>
				pd_status IN ('n', 'b')
			</when>
			<when test='pd_status == "h"'>
				pd_status IN ('h', 'b')
			</when>
			<otherwise>
				pd_status = #{pd_status}
			</otherwise>
		</choose></trim>
		<!-- 성별 -->
		<trim prefix="AND (" suffix="OR pd_sex = 'u')"><if test='pd_sex != null and pd_sex != ""'>
			pd_sex = #{pd_sex}
		</if></trim>
		<!-- 연령 -->
		<trim prefix="AND"><choose>
			<when test='pd_age == null'> <!-- default -->
				pd_age = 'a'
			</when>
			<when test='pd_age == "all"'> <!-- all -->
			</when>
			<otherwise>
				pd_age = #{pd_age}
			</otherwise>
		</choose></trim>
		<!-- 분류 -->
		<if test='pct_no != null and pct_no != ""'>
			AND pct_no = #{pct_no}
		</if>
		<!-- 컬렉션 -->
		<if test="co_no != 0">
			AND co_no = #{co_no}
		</if>
		<!-- 이름 검색 -->
		<if test='keyword != null and keyword != ""'>
			<choose>
				<when test='search == null or search == "pd_name"'>
					AND (pd_name LIKE '%'||#{keyword}||'%')
				</when>
				<when test='search == "pd_no"'>
					AND pd_no = #{keyword}
				</when>
			</choose>
		</if>
		<!-- 컬러 필터링 -->
		<if test="color != 0">
			AND (
				SELECT DISTINCT
					1
				FROM
					prod_ins
				WHERE
					pd_no = prod.pd_no AND
					pcl_no = #{color}
			) IS NOT NULL
		</if>
		<!-- 사이즈 필터링 -->
		<if test="size != 0">
			AND (
				SELECT DISTINCT
					1
				FROM
					prod_stock
					INNER JOIN
						prod_ins
					ON
						prod_ins.pi_no = prod_stock.pi_no
				WHERE
					pd_no = prod.pd_no AND
					ps_size = #{size}
			) IS NOT NULL
		</if>
		<if test="priceBottom != 0">
	 				AND
				pd_price * NVL((100-(<include refid="dcmax"/>))/100, 1)
			<![CDATA[>= #{priceBottom}]]>
		</if>
		<if test="priceTop != 0">
	 				AND
				pd_price * NVL((100-(<include refid="dcmax"/>))/100, 1)
			<![CDATA[< #{priceTop}]]>
		</if>
		<if test="includeItemless == false">
			AND (
				SELECT DISTINCT
					1
				FROM
					prod_stock
					INNER JOIN
						prod_ins
					ON
						prod_stock.pi_no = prod_ins.pi_no
				WHERE
					pd_no = prod.pd_no
			) IS NOT NULL
		</if>
	</sql>
	
	<!--##################################### 상품 목록 검색 #####################################-->
	<select id="prodList" parameterType="prod" resultType="prod">
		SELECT
			*
		FROM
			(
			SELECT
				/*+ INDEX_DESC(prod prod_pk)*/
				rownum rn, rowid ri,
				<include refid="prodInfo"/>
			FROM
				prod
			WHERE
				<trim prefixOverrides="AND">
					<include refid="prodReq" />
					<!-- 페이징 -->
					<![CDATA[AND rownum <= #{pageNum} * #{amount}]]>
				</trim>
			) prodlist
		WHERE
			<![CDATA[rn > (#{pageNum} - 1) * #{amount}]]>
	</select>
	
	
	<select id="countRecords" parameterType="prod" resultType="int">
		SELECT
			COUNT(*)
		FROM
			prod
		<where>
			<include refid="prodReq" />
		</where>
	</select>
	
	<!--##################################### 상품 단일 검색 #####################################-->
	<!-- pd_no 기준 검색 -->
	<select id="prodDetail" parameterType="prod" resultType="prod">
		SELECT
			<include refid="prodInfo" />
		FROM
			prod
		WHERE
			pd_no = #{pd_no}
	</select>
	<!-- pi_no 기준 검색 -->
	<select id="prodDetailByIns" parameterType="prodins" resultType="prod">
		SELECT
			<include refid="prodInfo" />
		FROM
			prod
		WHERE
			pd_no = (
				SELECT
					pd_no
				FROM
					prod_ins
				WHERE
					pi_no = #{pi_no}
			)
	</select>
	
	<!--#####################################  #####################################-->
</mapper>